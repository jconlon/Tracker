<?xml version="1.0" encoding="UTF-8"?>
<metatype:MetaData xmlns:metatype="http://www.osgi.org/xmlns/metatype/v1.1.0">

  <OCD description="Adapts input measurements for display on TruTest Indicators." 
       name="TruTest Measurement Adapter" id="om.verticon.tracker.irouter.trutest.measurement.adapter">
   
    <AD name="Wiring group name"  id="tracker.wiring.group.name" required="true" type="String" default=""
        description="Name of the group of components that will be wired together."/>
    
    <AD name="Consumable scope" id="wireadmin.consumer.scope" type="String"
		cardinality="1" 
		description="The input measurement scope to adapt. (Use full scope names)" />
 
    <AD name="Producer scope" id="wireadmin.producer.scope" type="String"
		cardinality="1" 
		description="The adapted TruTest command product output. (Use full scope names)" />
 
    <AD name="Destination Field" id="destination.field" type="Integer" default="8"
        description="The destination field in the TruTest indicator." >
    	<Option label="File Data One" value="8"/>
		<Option label="File Data Two" value="9"/>
		<Option label="Life Data One" value="0"/>
		<Option label="Life Data Two" value="1"/>
		<Option label="Life Data Three" value="2"/>
		<Option label="Life Data Four" value="3"/>
		<Option label="Life Data Five" value="4"/>
		<Option label="Life Data Six" value="5"/>
		<Option label="Life Data Seven" value="6"/>
		<Option label="Life Data Eight" value="7"/>
	</AD>
	
	<AD name="Minimuim Characters" id="minimuim.characters" type="Integer" default="6"
		description="Minimuim characters needed to display the measurement. Includes the decimal point.">
		<Option label="One" value="0"/>
		<Option label="Two" value="1"/>
		<Option label="Three" value="2"/>
		<Option label="Four" value="3"/>
		<Option label="Five" value="4"/>
		<Option label="Six" value="5"/>
		<Option label="Seven" value="6"/>
		<Option label="Eight" value="7"/>
	</AD>
	
    <AD name="Destination Port" id="destination.port" type="Integer" default="1"
       description="TruTest Serial port that connects it to the iRouter.">
    	<Option label="Con1" value="1"/>
		<Option label="Con2" value="2"/>
	</AD>
	
	<AD name="Decimal Places" id="decimal.places" type="Integer" default="4"
	description="Number of decimal places to display.">
	    <Option label="None" value="0"/>
		<Option label="One" value="1"/>
		<Option label="Two" value="2"/>
		<Option label="Three" value="3"/>
		<Option label="Four" value="4"/>
		<Option label="Five" value="5"/>
		<Option label="Six" value="6"/>
		<Option label="Seven" value="7"/>
		<Option label="Eight" value="8"/>
	</AD>
	
	<AD name="Presentation Units" id="presentation.units" type="String" default="none"
	description="Convert native SI units to compatible non standard units for presentation.">
	    <Option label="none" value="NOND"/>
		<Option label="grams" value="GRAMS"/>
		<Option label="ounces" value="OUNCES"/>
		<Option label="pounds" value="POUNDS"/>
		<Option label="inches" value="INCHES"/>
		<Option label="millimeters" value="MILLIMETERS"/>
		<Option label="feet" value="FEET"/>
		<Option label="yards" value="YARDS"/>
	</AD>
	
	
  </OCD>
  
  <Designate pid="om.verticon.tracker.irouter.trutest.measurement.adapter" bundle="*">
		<Object ocdref="om.verticon.tracker.irouter.trutest.measurement.adapter"/>
  </Designate>
  
  
</metatype:MetaData>
