<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension-point id="readerWizards" name="EventPublisherWizards" schema="schema/readerWizards.exsd"/>
   <extension
         point="org.eclipse.ui.views">
      <category
            name="Tracker"
            id="com.verticon.tracker.views">
      </category>
      <view
            name="Readers"
            icon="icons/sample.gif"
            category="com.verticon.tracker.views"
            class="com.verticon.tracker.reader.views.ReaderViewPart"
            id="com.verticon.tracker.reader.view">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.ui.resourcePerspective">
         <view
               ratio="0.5"
               relative="org.eclipse.ui.views.TaskList"
               relationship="right"
               id="com.verticon.tracker.reader.view">
         </view>
         <viewShortcut id="com.verticon.tracker.reader.view"/>
      </perspectiveExtension>
   </extension>
   
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="com.verticon.tracker.perspective">
         <view
               visible="true"
               relative="org.eclipse.ui.views.PropertySheet"
               relationship="stack"
               id="com.verticon.tracker.reader.view">
         </view>
         <viewShortcut id="com.verticon.tracker.reader.view"/>
      </perspectiveExtension>
   </extension>
   
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            category="com.verticon.tracker.prefs.view"
            class="com.verticon.tracker.reader.preferences.PreferencePage"
            id="com.verticon.tracker.reader.preferences.SerialPortPublisherPreferencePage"
            name="Event Publisher"/>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer class="com.verticon.tracker.reader.preferences.PreferenceInitializer"/>
   </extension>
   <extension
         point="com.verticon.tracker.reader.readerWizards">
      <wizard
            class="com.verticon.tracker.reader.event.filetailer.FileTailerReaderWizard"
            id="com.verticon.tracker.reader.fileTailer"
            name="File Tailer">
         <description>
            publishes TagIDs as events as they are appended to a file. 
         </description>
      </wizard>
   </extension>

</plugin>
