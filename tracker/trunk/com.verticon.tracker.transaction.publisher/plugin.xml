<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="Tracker"
            id="com.verticon.tracker.views">
      </category>
      <view
            name="Event Publishers"
            icon="icons/sample.gif"
            category="com.verticon.tracker.views"
            class="com.verticon.tracker.transaction.publisher.views.PublisherViewPart"
            id="com.verticon.tracker.transaction.publisher.view">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.ui.resourcePerspective">
         <view
               ratio="0.5"
               relative="org.eclipse.ui.views.TaskList"
               relationship="right"
               id="com.verticon.tracker.transaction.publisher.view">
         </view>
         <viewShortcut id="com.verticon.tracker.transaction.publisher.view"/>
      </perspectiveExtension>
   </extension>
   
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="com.verticon.tracker.perspective">
         <view
               visible="true"
               relative="org.eclipse.ui.views.PropertySheet"
               relationship="stack"
               id="com.verticon.tracker.transaction.publisher.view">
         </view>
         <viewShortcut id="com.verticon.tracker.transaction.publisher.view"/>
      </perspectiveExtension>
   </extension>
   
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            category="com.verticon.tracker.prefs.view"
            class="com.verticon.tracker.transaction.publisher.preferences.PublisherPreferencePage"
            id="com.verticon.tracker.transaction.publisher.preferences.SerialPortPublisherPreferencePage"
            name="Event Publisher"/>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer class="com.verticon.tracker.transaction.publisher.preferences.PreferenceInitializer"/>
   </extension>

</plugin>
