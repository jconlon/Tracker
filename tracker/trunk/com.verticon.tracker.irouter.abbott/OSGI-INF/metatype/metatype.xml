<?xml version="1.0" encoding="UTF-8"?>
<metatype:MetaData xmlns:metatype="http://www.osgi.org/xmlns/metatype/v1.0.0">

  <OCD description="Configuration for the Tracker Abbott Controller Instance" name="Tracker Abbott Controller" id="com.verticon.tracker.irouter.abbott.controllerfactory">
    <AD name="Wiring group name"  id="tracker.wiring.group.name" required="true" type="String" default=""/> 
   	<AD name="Units for displaying blood weights" id="trutest.field.units" type="Integer" default="1">
    	<Option label="grams" value="0"/>
		<Option label="kilograms" value="1"/>
	</AD>
   
    <AD name="Alarm command"  id="trutest.beepCommand" required="false" type="String" default="{SABP500}%13%"/>
    <AD name="Alarm interval in seconds"  id="abbott.bwalarm.period" required="false" type="Long" default="5"/>
    <AD name="BW multiplier"  id="abbott.bwmult" required="false" type="Double" default=".01"/>
    
    <!--
    At what ratio of actual blood weight to calculated blood weight should the alarming begin  -->
	<AD name="Animal to BW percent trigger for alarm"  id="abbott.bwalarm.trigger" required="false" type="Double" default=".75"/>
   
    <!-- 
     At what weight of animal in kilograms will the calculating of blood weight be done.
	 Prevents negative scale weights from display erroneous values.
	--> 
    <AD name="Animal weight calculation threashold"  id="abbott.calbw.threashold" required="false" type="Long" default="5"/>
   
    <!-- 
    To write actual and calculated data to the display, the ports fields, and the 
    minimum number of characters must be specified. Change the defaults if the indicator 
    is reconfigured changing field locations.
    SXD1 is Com Port 1, 8 is the first data field, 9 the second.
    SXC1 is Com Port 1 and 6 is the number of characters.-->
    <AD name="Actual BW field"  id="trutest.actbw.field" required="false" type="String" default="{SXD19}%13%%10%{SXC16}%13%"/>
    <AD name="Calc BW field"  id="trutest.calbw.field" required="false" type="String" default="{SXD18}%13%%10%{SXC16}%13%"/>
  </OCD>
  
  <Designate pid="com.verticon.tracker.irouter.abbott.controllerfactory" bundle="*">
		<Object ocdref="com.verticon.tracker.irouter.abbott.controllerfactory"/>
  </Designate>
  
  
</metatype:MetaData>
