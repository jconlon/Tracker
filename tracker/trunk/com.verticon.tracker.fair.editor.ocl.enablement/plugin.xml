<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         point="com.verticon.tracker.ocl.query.viewer.packages">
      <package
            uri="http://www.verticon.com/ns/tracker/fair/0.1.0">
      </package>
      <package
            uri="http://www.verticon.com/ns/tracker/0.1.0">
      </package>
   </extension>
   <extension point="org.eclipse.ui.editorActions"> 
   <!-- Fair Editor -->
       <editorContribution
            id="com.verticon.tracker.ocl.query.fairEditorContribution"
            targetID="com.verticon.tracker.fair.editor.presentation.FairEditorID">
         <menu
               label="%_UI_OclMenu_label"
               path="com.verticon.tracker.fairMenuID/additions"
			   id="org.eclipse.emf.oclQueryMenuIDFairEditor">
              <separator name="additions"/>
         </menu>
         <action
               label="%_UI_CtxFreeQuery_label"
               class="com.verticon.tracker.ocl.query/com.verticon.tracker.ocl.query.actions.ContextFreeQueryDelegate"
               menubarPath="com.verticon.tracker.fairMenuID/org.eclipse.emf.oclQueryMenuIDFairEditor/additions"
               icon="$nl$/icons/elcl16/oclqryedit_co.gif"
               id="com.verticon.tracker.fair.editor.ocl.query.ContextFreeQueryAction"/>
         <action
               label="%_UI_OclQuery_label"
               class="com.verticon.tracker.ocl.query/com.verticon.tracker.ocl.query.actions.OCLQueryDelegate:http://www.verticon.com/ns/tracker/fair/0.1.0 http://www.verticon.com/ns/tracker/0.1.0"
               menubarPath="com.verticon.tracker.fairMenuID/org.eclipse.emf.oclQueryMenuIDFairEditor/additions"
               icon="$nl$/icons/elcl16/oclqryedit_co.gif"
               id="com.verticon.tracker.fair.editor.ocl.query.OclQueryAction"/>
      </editorContribution> 
      
      <!-- Premises Transaction Editor -->
      <editorContribution
            id="com.verticon.tracker.ocl.query.fairTransactionEditorContribution"
            targetID="com.verticon.tracker.fair.transaction.editor.presentation.FairEditorID">
         <menu
               label="%_UI_OclMenu_label"
               path="com.verticon.tracker.fairMenuID/additions"
			   id="org.eclipse.emf.oclQueryMenuIDFairTransactionEditor">
              <separator name="additions"/>
         </menu>
         <action
               label="%_UI_CtxFreeQuery_label"
               class="com.verticon.tracker.ocl.query/com.verticon.tracker.ocl.query.actions.ContextFreeQueryDelegate"
               menubarPath="com.verticon.tracker.fairMenuID/org.eclipse.emf.oclQueryMenuIDFairTransactionEditor/additions"
               icon="$nl$/icons/elcl16/oclqryedit_co.gif"
               id="com.verticon.tracker.fair.editor.ocl.query.ContextFreeQueryAction"/>
         <action
               label="%_UI_OclQuery_label"
               class="com.verticon.tracker.ocl.query/com.verticon.tracker.ocl.query.actions.OCLQueryDelegate:http://www.verticon.com/ns/tracker/fair/0.1.0 http://www.verticon.com/ns/tracker/0.1.0"
               menubarPath="com.verticon.tracker.fairMenuID/org.eclipse.emf.oclQueryMenuIDFairTransactionEditor/additions"
               icon="$nl$/icons/elcl16/oclqryedit_co.gif"
               id="com.verticon.tracker.fair.editor.ocl.query.OclQueryAction"/>
      </editorContribution> 
</extension>
</plugin>
